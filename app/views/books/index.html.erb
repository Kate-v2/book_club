<h1>All Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <span class="book" id=<%="book-#{book.id}">
      <h3><%= book.title %></h3>
      <p><%= book.year %></p>
        <% book.authors.each do |author| %>
          <span class="author">
            <%= author.name %>
          </span>
        <% end %>
      </p>
      <p>Pages: <%= book.pages %></p>
    </span>
  <% end %>
</div>
