<h1>All Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <span class="book" id=<%="book-#{book.id}">
      <h3><%= book.title %></h3>
      <p><%= book.year %></p>
        <%
        authors = []
        book.authors.each { |author| authors << author.name }
        string = authors.join(" ")
        %>
      <p><%= string %></p>
      <p>Pages: <%= book.pages %></p>
    </span>
  <% end %>
</div>
