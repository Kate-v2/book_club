<%= render "components/header" %>

<header>
  <h1> Create a Review </h1>
</header>

<%= form_for @review do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.label :score %>:
  <%= f.text_field :score %><br />

  <%= f.label :user_id %>:
  <%= f.text_field :user_id %><br />

  <%= f.hidden_field :book_id, :value => @book_id %>

  <%= f.submit %>
<% end %>
